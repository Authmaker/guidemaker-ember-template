{{!-- template-lint-disable no-action no-curly-component-invocation no-implicit-this --}}
<aside class="sidebar">
  {{#if versions}}
    <PowerSelect @ariaLabel={{model.version}} @selected={{model.version}} @options={{this.versions}} @onChange={{action 'selectVersion'}} as |version|>
      {{shorten-version version}}
    </PowerSelect>
  {{/if}}

  <input id="toc-toggle" class="toc-toggle visually-hidden" type="checkbox" />
  <label for="toc-toggle">Table of Contents <span class="visually-hidden">toggle</span></label>

  <nav class='toc-container {{if versions 'versions'}}' aria-label='table of contents'>
    {{table-of-contents data=model.pages version=model.version currentPage=page.currentPage currentSection=page.currentSection}}
  </nav>

  {{!-- <%= link_to "&#11014; Back to Top".html_safe, "#", class: "back-to-top" %> --}}
</aside>

{{outlet}}
